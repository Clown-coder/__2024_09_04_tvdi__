{%extends '_base.j2'%}

{% block title%}
Login
{% endblock%}

{% block head%} {{super()}} {% endblock%}

{% block main%}
<div class='container'>
    <form method="POST">
        {{myForm.csrf_token}}
        <div class='mb-3'>
            {{myForm.email_field.label(class='form-label')}} {{myForm.email_field(size=30,class='form-control')}}
        </div>
        <div class='mb-3'>
            {{myForm.password_field.label(class='form-label')}} {{myForm.password_field(size=50,class='form-control')}}
        </div>
        
        <div class="mt-5">
            {{myForm.submit_field.label(class="btn btn-primary")}} 
        </div>
        <p class="d-inline-flex gap-1 mt-5">
            <a href="{{url_for('auth.regist')}}" class="btn active" role="button" >註冊會員</a>
        </p>
    </form>
</div>
{% endblock%}
